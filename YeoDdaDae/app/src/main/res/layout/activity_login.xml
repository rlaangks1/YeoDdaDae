<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_lar"
    android:layout_width="410dp"
    android:layout_height="730dp"
    android:clipToOutline="true"
    android:background="#FFFFFF">

    <View
        android:id="@+id/main_image"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/main_image" />
    <ImageView
        android:id="@+id/user_face"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="102dp"
        android:background="@drawable/user_face" />

    <ImageButton
        android:id="@+id/loginBackBtn"
        android:layout_width="48dp"
        android:layout_height="34dp"
        android:layout_alignBottom="@+id/loginPwTxt"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginStart="358dp"
        android:layout_marginBottom="266dp"
        android:src="@drawable/backward" />

    <TextView
        android:id="@+id/login2"
        android:layout_width="56dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="179dp"
        android:layout_marginTop="66dp"
        android:gravity="center"
        android:text="@string/login2"
        android:textAppearance="@style/login2" />

    <EditText
        android:id="@+id/loginIdTxt"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="477dp"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/loginPwTxt"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="423dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="356dp"
        android:background="@color/main"
        android:text="로그인"
        android:visibility="visible" />

    <Button
        android:id="@+id/toRegisterBtn"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/loginBtn"
        android:layout_alignBottom="@+id/loginBtn"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="-36dp"
        android:background="@color/white"
        android:text="회원가입" />

    <Button
        android:id="@+id/login_findidpw"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/loginBtn"
        android:layout_alignBottom="@+id/loginBtn"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="-36dp"
        android:background="@color/white"
        android:text="아이디/비밀번호 찾기" />
</RelativeLayout>