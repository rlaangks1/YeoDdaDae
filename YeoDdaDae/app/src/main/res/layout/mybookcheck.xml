<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.TicketFragment">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/image_7"
            android:layout_width="37dp"
            android:layout_height="34dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/mybooking" />

        <TextView
            android:id="@+id/mybookcheck"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="19dp"
            android:gravity="top"
            android:text="@string/mybookcheck"
            android:textAppearance="@style/mybookcheck" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="443dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/booknum"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="예약번호" />

        <TextView
            android:id="@+id/price_perhour"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="주차장명" />

        <TextView
            android:id="@+id/book_adress"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="주소" />

        <TextView
            android:id="@+id/book_timerange"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="주차예약시간" />

        <TextView
            android:id="@+id/book_id"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="예약자(ID)" />

        <TextView
            android:id="@+id/book_price"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="금액" />

        <TextView
            android:id="@+id/book_time"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="예약한 시각" />


    </LinearLayout>

    <Button
        android:id="@+id/book_cancel"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="356dp"
        android:background="@color/red"
        android:text="예약취소"
        android:visibility="visible" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="660dp"
        android:background="@color/main"
        app:menu="@menu/bottom_nav" />

</FrameLayout>