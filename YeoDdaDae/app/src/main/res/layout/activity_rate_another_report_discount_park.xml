<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RateAnotherReportDiscountParkActivity">

    <ImageButton
        android:id="@+id/reportInfoBackBtn"
        android:src="@drawable/back_icon"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:text="제보주차장 평가"
        android:textSize="25sp"
        android:textColor="@color/sub"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/reportInfoBackBtn"
        app:layout_constraintBottom_toBottomOf="@+id/reportInfoBackBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/reportInfoBackBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:background="@color/lightgray">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rateAnotherReportBackBoardConstLayout"
                android:background="@drawable/round_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/rateReportIdTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="제보 번호"
                    android:textSize="20sp"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/rateReportIdContentTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/sub"
                    android:fontFamily="@font/paperlogy_5medium"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rateReportIdTxt" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/gray"
                    app:layout_constraintTop_toBottomOf="@+id/rateReportIdContentTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/rateReportParkNameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="주차장 이름"
                    android:textSize="20sp"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rateReportIdContentTxt" />

                <TextView
                    android:id="@+id/rateReportParkNameContentTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/sub"
                    android:fontFamily="@font/paperlogy_5medium"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rateReportParkNameTxt" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/gray"
                    app:layout_constraintTop_toBottomOf="@+id/rateReportParkNameContentTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/rateReportParkAddressTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="주차장 주소"
                    android:textSize="20sp"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rateReportParkNameContentTxt" />

                <TextView
                    android:id="@+id/rateReportParkNewAddressContentTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/sub"
                    android:fontFamily="@font/paperlogy_5medium"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rateReportParkAddressTxt" />

                <TextView
                    android:id="@+id/rateReportParkOldAddressContentTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/sub"
                    android:fontFamily="@font/paperlogy_5medium"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rateReportParkNewAddressContentTxt" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/gray"
                    app:layout_constraintTop_toBottomOf="@+id/rateReportParkOldAddressContentTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/rateReportConditionAndDiscountTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="조건 및 혜택"
                    android:textSize="20sp"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rateReportParkOldAddressContentTxt" />

                <TextView
                    android:id="@+id/rateReportConditionAndDiscountContentTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/sub"
                    android:fontFamily="@font/paperlogy_5medium"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rateReportConditionAndDiscountTxt" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/gray"
                    app:layout_constraintTop_toBottomOf="@+id/rateReportConditionAndDiscountContentTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/rateReportUpTimeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:text="제보 시각"
                    android:fontFamily="@font/paperlogy_5medium"
                    app:layout_constraintTop_toBottomOf="@+id/rateReportConditionAndDiscountContentTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/rateReportUpTimeContentTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/sub"
                    android:textStyle="bold"
                    android:fontFamily="@font/paperlogy_5medium"
                    app:layout_constraintTop_toBottomOf="@+id/rateReportUpTimeTxt"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@drawable/round_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/rateAnotherReportBackBoardConstLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" >

                <ImageButton
                    android:id="@+id/rateReportPerfectBtn"
                    android:src="@drawable/disabled_button"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/rateReportMistakeBtn"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/perfectTxt"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/rateReportPerfectBtn"
                    app:layout_constraintBottom_toBottomOf="@+id/rateReportPerfectBtn"
                    app:layout_constraintLeft_toLeftOf="@+id/rateReportPerfectBtn"
                    app:layout_constraintRight_toRightOf="@+id/rateReportPerfectBtn" />

                <ImageButton
                    android:id="@+id/rateReportMistakeBtn"
                    android:src="@drawable/disabled_button"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/rateReportPerfectBtn"
                    app:layout_constraintRight_toLeftOf="@+id/rateReportWrongBtn"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/mistakeTxt"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/rateReportMistakeBtn"
                    app:layout_constraintBottom_toBottomOf="@+id/rateReportMistakeBtn"
                    app:layout_constraintLeft_toLeftOf="@+id/rateReportMistakeBtn"
                    app:layout_constraintRight_toRightOf="@+id/rateReportMistakeBtn" />

                <ImageButton
                    android:id="@+id/rateReportWrongBtn"
                    android:src="@drawable/disabled_button"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/rateReportMistakeBtn"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/wrongTxt"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/rateReportWrongBtn"
                    app:layout_constraintBottom_toBottomOf="@+id/rateReportWrongBtn"
                    app:layout_constraintLeft_toLeftOf="@+id/rateReportWrongBtn"
                    app:layout_constraintRight_toRightOf="@+id/rateReportWrongBtn" />

                <TextView
                    android:id="@+id/perfect"
                    android:text="완벽해요"
                    android:textSize="18sp"
                    android:textColor="@color/sub"
                    android:textStyle="bold"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/rateReportPerfectBtn"
                    app:layout_constraintLeft_toLeftOf="@+id/rateReportPerfectBtn"
                    app:layout_constraintRight_toRightOf="@+id/rateReportPerfectBtn" />

                <TextView
                    android:text="틀린 부분이 있어요"
                    android:textSize="16sp"
                    android:textColor="@color/sub"
                    android:textStyle="bold"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/rateReportMistakeBtn"
                    app:layout_constraintLeft_toLeftOf="@+id/rateReportMistakeBtn"
                    app:layout_constraintRight_toRightOf="@+id/rateReportMistakeBtn" />

                <TextView
                    android:text="완전히 틀렸어요"
                    android:textSize="16sp"
                    android:textColor="@color/sub"
                    android:textStyle="bold"
                    android:fontFamily="@font/paperlogy_5medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/rateReportWrongBtn"
                    app:layout_constraintLeft_toLeftOf="@+id/rateReportWrongBtn"
                    app:layout_constraintRight_toRightOf="@+id/rateReportWrongBtn" />

                <View
                    android:id="@+id/tempViewForMargin"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/perfect"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rateReportReasonConstLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/perfect"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/rateReportReasonEditTxt"
                        android:maxLength="200"
                        android:textSize="20sp"
                        android:textColor="@color/sub"
                        android:backgroundTint="@color/sub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@+id/rateReportReasonUploadBtn"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/rateReportReasonUploadBtn"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <ImageButton
                        android:id="@+id/rateReportReasonUploadBtn"
                        android:src="@drawable/upload_icon"
                        android:scaleType="fitCenter"
                        android:background="@android:color/transparent"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="@+id/rateReportReasonEditTxt"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="10dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

