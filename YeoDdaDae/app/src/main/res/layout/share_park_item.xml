<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradate_list_view_item_2" >

    <TextView
        android:id="@+id/shareParkLocationTxt"
        android:text="주소"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/shareParkShareTimeTxt"
        android:text="공유시간"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:maxLines="4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/shareParkLocationTxt"
        app:layout_constraintBottom_toTopOf="@+id/shareParkIsCancelledTxt"
        app:layout_constraintLeft_toLeftOf="@+id/shareParkLocationTxt"/>

    <TextView
        android:id="@+id/shareParkPriceTxt"
        android:text="가격"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/shareParkLocationTxt"
        app:layout_constraintRight_toRightOf="@+id/shareParkUpTimeTxt" />

    <TextView
        android:id="@+id/shareParkIsCancelledTxt"
        android:text="상태"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/shareParkLocationTxt"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/shareParkUpTimeTxt"
        android:text="시각"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>