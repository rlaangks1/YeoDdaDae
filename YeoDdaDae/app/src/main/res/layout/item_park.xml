<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/gradate_list_view_item_3"
    android:id="@+id/parkItemConstraintLayout">

    <TextView
        android:id="@+id/parkOrder"
        android:text="0"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/parkName"
        android:text="주차장명"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/parkOrder"
        app:layout_constraintBottom_toBottomOf="@+id/parkOrder"
        app:layout_constraintLeft_toRightOf="@+id/parkOrder"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/parkPhone"
        android:text="000-0000-0000"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/parkName"
        app:layout_constraintRight_toRightOf="@+id/parkName"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/parkDistance"
        android:text="0km"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/parkType"
        android:text="주차장종류"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/parkDistance"
        app:layout_constraintRight_toLeftOf="@+id/parkDistance"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/parkConditionAndDiscount"
        android:text="조건/혜택"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/parkOrder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/parkOrder"
        app:layout_constraintRight_toLeftOf="@+id/parkType"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/parkPrice"
        android:text="주차비"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/parkOrder"
        android:layout_marginBottom="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>