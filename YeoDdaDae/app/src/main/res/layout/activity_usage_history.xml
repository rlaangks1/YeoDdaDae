<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsageHistoryActivity">

    <ImageButton
        android:id="@+id/usageHistoryBackBtn"
        android:src="@drawable/back_icon"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:text="길찾기 기록"
        android:textSize="25sp"
        android:textColor="@color/sub"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/usageHistoryBackBtn"
        app:layout_constraintBottom_toBottomOf="@+id/usageHistoryBackBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Spinner
        android:id="@+id/usageHistoryParkOrGasSpinner"
        android:dropDownWidth="wrap_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/usageHistoryBackBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/usageHistoryOrderSpinner"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <Spinner
        android:id="@+id/usageHistoryOrderSpinner"
        android:dropDownWidth="wrap_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/usageHistoryParkOrGasSpinner"
        app:layout_constraintBottom_toBottomOf="@+id/usageHistoryParkOrGasSpinner"
        app:layout_constraintLeft_toRightOf="@+id/usageHistoryParkOrGasSpinner"
        app:layout_constraintRight_toLeftOf="@+id/usageHistorySub1Spinner"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp"/>

    <Spinner
        android:id="@+id/usageHistorySub1Spinner"
        android:dropDownWidth="wrap_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/usageHistoryParkOrGasSpinner"
        app:layout_constraintBottom_toBottomOf="@+id/usageHistoryParkOrGasSpinner"
        app:layout_constraintLeft_toRightOf="@+id/usageHistoryOrderSpinner"
        app:layout_constraintRight_toLeftOf="@+id/usageHistorySub2Spinner"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp" />

    <Spinner
        android:id="@+id/usageHistorySub2Spinner"
        android:dropDownWidth="wrap_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/usageHistoryParkOrGasSpinner"
        app:layout_constraintBottom_toBottomOf="@+id/usageHistoryParkOrGasSpinner"
        app:layout_constraintLeft_toRightOf="@+id/usageHistorySub1Spinner"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp" />

    <ListView
        android:id="@+id/usageHistoryListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="@null"
        android:dividerHeight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usageHistoryParkOrGasSpinner"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/usageHistoryNoTxt"
        android:text="없음"
        android:textSize="30sp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usageHistoryParkOrGasSpinner" />

</androidx.constraintlayout.widget.ConstraintLayout>
